%h1 My Posts
%br
%table
  %thead
    %th Title
    %th Body
  %tbody
    - @posts.each do |post|
      %tr
        %td= link_to "#{post.title}", post_path(post)
        %td= post.body
        %td= link_to "Edit", edit_post_path(post)
        %td= link_to "Delete", post_path(post), method: :delete

= link_to "Add new post", new_post_path
